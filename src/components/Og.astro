---
interface Props {
  title: string;
  desc: string;
  image_path: string;
}

const { title, desc, image_path } = Astro.props;
---

<!-- HTML Meta Tags -->
<title>{title}</title>
<meta name="description" content={desc} />

<!-- Facebook Meta Tags -->
<meta property="og:url" content="https://www.luiseduardocortes.xyz${endpoint" />
<meta property="og:type" content="website" />
<meta property="og:title" content={title} />
<meta property="og:description" content={desc} />
<meta property="og:image" content={image_path} />

<!-- Twitter Meta Tags -->
<meta name="twitter:card" content={desc} />
<meta property="twitter:domain" content="luiseduardocortes.xyz" />
<meta property="twitter:url" content="https://www.luiseduardocortes.xyz" />
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={desc} />
<meta name="twitter:image" content={image_path} />

